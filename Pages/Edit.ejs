<%- include("./includes/head.ejs")  %>
    <div class="add-post-con">
        <div class="add-title-con">
            <h1>Edit Your Post.</h1>
            <a href="/">Go back home</a>
        </div>
        <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Dicta in consequuntur dolore?</p>
        <form action="/admin/post-edit/" method="post">
            <input type="text" name="postId" value="<%= post.id %>" hidden>
            <div class="con">
                <label for="title">Title</label>
                <input type="text" name="title" value="<%= post.title %>"   required />
            </div>
            <div class="con">
                <label for="image">Image URl</label>
                <input type="text" name="image" value="<%= post.image_url %>" required />
            </div>
           <div class="con">
                <label for="description">Description</label>
                <textarea name="description" required id="description" >
                <%= post.description %>
                </textarea>
           </div>
            <button class="post-btn">Edit</button>
        </form>
    </div>
<%- include("./includes/foot.ejs") %>